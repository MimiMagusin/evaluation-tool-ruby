<h1> <%=@student.first_name%> </h1>

<% if @student.evaluations.any? %>
  <ul>
    <% @student.evaluations.each do |evaluation| %>
      <h3> Color: <%= evaluation.color %> </h3>
      <h4> Comment:</h4>
      <p> <%= evaluation.comment %></p>
    <% end %>
  </ul>
<% else %>
  <p><%=@student.first_name%> has no evaluations yet!</p>
<% end %>

  <div class="panel panel-primary">
    <div class="panel-heading">Add an evaluation!</div>

    <div class="panel-body">
      <%= render 'evaluations/form' %>
    </div>
  </div>


<a class="btn btn-primary" href="<%=root_path%>" role="button">Back to home!</a>

<%= link_to "[Edit Student]", edit_student_path(@student.id) %>
<%= link_to "[Delete Student]", student_path(@student.id), method: :delete, data: { confirm: "Are you sure?" } %>
