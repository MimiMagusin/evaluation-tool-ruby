<%= form_for @batch do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <div class="form-group">
    <label>Start Date</label>
    <%= f.date_select :start_date %>
  </div>

  <div class="form-group">
    <label>End Date</label>
    <%= f.date_select :end_date %>
  </div>


  <%= f.submit (@batch.new_record? ? "Create" : "Update") %>

<% end %>
