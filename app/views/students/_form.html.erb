<%= form_for @student do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :batch_id %>
  <%= f.collection_select(:batch_id, Batch.all, :id, :name) %>

  <%= f.submit (@student.new_record? ? "Create" : "Update") %>

<% end %>
